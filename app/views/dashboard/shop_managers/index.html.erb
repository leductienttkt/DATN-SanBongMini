<% provide :title, t("devise.user.update_info") %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_tag shop_path(@shop), method: :put do %>
      <%= render "shared/error_messages", object: @shop %>
      <div class="form-group">
        <%= label_tag(:email, t("enter_email")) %>
      </div>
      <div class="form-group">
        <%= email_field_tag :email, nil, class: "form-control"%>
      </div>
      <%= link_to t("common.back_button"), :back, class: "btn btn-warning" %>
      <%= submit_tag  t("devise.user.update_info"), class: "btn btn-primary space-top-submit" %>
    <% end %>
  </div>
</div>
