<% provide :title, t("devise.user.sign_in") %>
<div class="devise">
  <div class="row">
    <h1 class="text-center title"><%= t"log_in.lb" %></h1>
  </div>

  <div class="row">
    <div class="col-lg-offset-3 col-lg-6 form-sign">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label t("log_in.email") %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label t("log_in.password") %><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label t("log_in.remember") %>
          </div>
        <% end -%>

        <div class="actions text-center">
          <%= f.submit t("log_in.lb"), class: "btn btn-default btn-sign" %>
        </div>
      <% end %>

      <!-- <%= render "users/shared/links" %> -->
    </div>
  </div>
</div>
