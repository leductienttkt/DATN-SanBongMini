<li class="search-item">
  <%= link_to mini_pitch do %>
    <div class="col-xs-12 col-sm-3 col-md-3">
      <span>
        <%= image_tag mini_pitch.image.url, class: "search-pic" %>
      </span>
    </div>
    <div class="col-xs-12 col-sm-9 col-md-9">
      <div class="row">
        <strong><%= mini_pitch.name %></strong>
      </div>
      <div class="row">
        <div class="col-md-8">
          <%= mini_pitch.pitch_name %>
        </div>
        <div class="col-md-4">
          <%= format_price mini_pitch.price %>
        </div>
      </div>
      <%= mini_pitch.address_details %>
    </div>
    <div class="clearfix"></div>
  <% end %>
</li>
