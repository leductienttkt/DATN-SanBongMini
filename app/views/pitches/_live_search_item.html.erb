<li class="search-item">
  <%= link_to pitch do %>
    <div class="col-xs-12 col-sm-3 col-md-3">
      <%= image_tag pitch.avatar.url, class: "img-responsive" %>
    </div>
    <div class="col-xs-12 col-sm-9 col-md-9">
      <div class="row">
        <strong><%= pitch.name %></strong>
        <%= t ".owner" %><%= pitch.owner_name %>
      </div>
      <div class="row">
        <div class="col-md-8">
          <%= truncate(pitch.address_details, length: 30) %>
        </div>
        <div class="col-md-4">
          <%= link_to "" do %>
            <%= t ".mini_pitches",
              num: pitch.mini_pitches.size %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="clearfix"></div>
  <% end %>
</li>
