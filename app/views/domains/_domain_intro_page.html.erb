<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/
  font-awesome/4.5.0/css/font-awesome.min.css">
<div class="container">
  <div class="row">
    <div class="process">
      <div class="process-row nav nav-tabs">
        <div class="process-step">
          <button type="button" class="btn btn-info btn-circle" data-toggle="tab"
            href="#menu1"><i class="fa fa-info fa-3x"></i></button>
          <p><%= t "introduce_domain_help" %></p>
        </div>
        <div class="process-step">
          <button type="button" class="btn btn-default btn-circle" data-toggle="tab"
            href="#menu2"><i class="fa fa-file-text-o fa-3x"></i></button>
          <p><%= t "step_one_domain_help" %></p>
        </div>
        <div class="process-step">
          <button type="button" class="btn btn-default btn-circle" data-toggle="tab"
            href="#menu3"><i class="fa fa-image fa-3x"></i></button>
          <p><%= t "step_two_domain_help" %></p>
        </div>
        <div class="process-step">
          <button type="button" class="btn btn-default btn-circle" data-toggle="tab"
            href="#menu4"><i class="fa fa-cogs fa-3x"></i></button>
          <p><%= t "step_three_domain_help" %></p>
        </div>
        <div class="process-step">
          <button type="button" class="btn btn-default btn-circle" data-toggle="tab"
            href="#menu5"><i class="fa fa-check fa-3x"></i></button>
          <p><%= t "finished_domain_help" %></p>
        </div>
      </div>
    </div>
    <div class="tab-content">
      <div id="menu1" class="tab-pane fade active in">
        <h3 class="txt-ali-cen h3-help"><%= t "introduce_domain_help" %></h3>
        <p class="txt-ali-cen p-font"><%= t "index.intro_search.context" %></p>
        <p class="txt-ali-cen p-font"><%= t "index.intro_order.context" %></p>
        <p class="txt-ali-cen p-font"><%= t "index.intro_shop.context" %></p>
        <ul class="list-unstyled list-inline pull-right">
          <li><button type="button" class="btn btn-info next-step">
            <%= t "next_btn_domain_help" %>
            <i class="fa fa-chevron-right"></i></button></li>
        </ul>
      </div>
      <div id="menu2" class="tab-pane fade">
        <h3 class="txt-ali-cen h3-help"><%= t "step_one_domain_help" %></h3>
        <p class="txt-ali-cen p-font"><%= t "step_one_help_forder" %></p>
        <ul class="list-unstyled list-inline pull-right">
          <li><button type="button" class="btn btn-default prev-step">
            <i class="fa fa-chevron-left"></i>
            <%= t "back_btn_domain_help" %></button></li>
          <li><button type="button" class="btn btn-info next-step">
            <%= t "next_btn_domain_help" %>
            <i class="fa fa-chevron-right"></i></button></li>
        </ul>
      </div>
      <div id="menu3" class="tab-pane fade">
        <h3 class="txt-ali-cen h3-help"><%= t "step_two_domain_help" %></h3>
        <p class="txt-ali-cen p-font"><%= t "step_two_help_forder" %></p>
        <ul class="list-unstyled list-inline pull-right">
          <li><button type="button" class="btn btn-default prev-step">
            <i class="fa fa-chevron-left"></i>
            <%= t "back_btn_domain_help" %></button></li>
          <li><button type="button" class="btn btn-info next-step">
            <%= t "next_btn_domain_help" %>
            <i class="fa fa-chevron-right"></i></button></li>
        </ul>
      </div>
      <div id="menu4" class="tab-pane fade">
        <h3 class="txt-ali-cen h3-help"><%= t "step_three_domain_help" %></h3>
        <p class="txt-ali-cen p-font"><%= t "step_three_help_forder" %></p>
        <ul class="list-unstyled list-inline pull-right">
          <li><button type="button" class="btn btn-default prev-step">
            <i class="fa fa-chevron-left"></i>
            <%= t "back_btn_domain_help" %></button></li>
          <li><button type="button" class="btn btn-info next-step">
            <%= t "next_btn_domain_help" %>
            <i class="fa fa-chevron-right"></i></button></li>
        </ul>
      </div>
      <div id="menu5" class="tab-pane fade">
        <h3 class="txt-ali-cen h3-help"><%= t "finished_domain_help" %></h3>
        <p class="txt-ali-cen p-font"><%= t "congrat_domain_help" %></p>
        <ul class="list-unstyled list-inline pull-right">
          <li><button type="button" class="btn btn-default prev-step">
            <i class="fa fa-chevron-left"></i>
            <%= t "back_btn_domain_help" %></button></li>
        </ul>
      </div>
    </div>
  </div>
</div>
